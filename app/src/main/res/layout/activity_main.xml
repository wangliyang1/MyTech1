    <ImageView
        android:layout_height="@dimen/dp_20"
        android:layout_width="@dimen/dp_20"
        android:src="@drawable/my_icon_next_n_xxhdpi"
        android:layout_marginLeft="@dimen/dp_160"/>

</LinearLayout>


    -<LinearLayout
        android:id="@+id/tie"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_20">

    <ImageView
        android:layout_height="@dimen/dp_25"
        android:layout_width="@dimen/dp_25"
        android:src="@drawable/my_icon_card_n_xxhdpi"
        android:layout_marginLeft="@dimen/dp_12"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="我的帖子"
        android:textSize="@dimen/sp_14"
        android:layout_marginLeft="@dimen/dp_20"/>

    <ImageView
        android:layout_height="@dimen/dp_20"
        android:layout_width="@dimen/dp_20"
        android:src="@drawable/my_icon_next_n_xxhdpi"
        android:layout_marginLeft="@dimen/dp_160"/>

</LinearLayout>


    -<LinearLayout
        android:id="@+id/tong"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_20">

    <ImageView
        android:layout_height="@dimen/dp_25"
        android:layout_width="@dimen/dp_25"
        android:src="@drawable/my_icon_notice_n_xxhdpi"
        android:layout_marginLeft="@dimen/dp_12"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="我的通知"
        android:textSize="@dimen/sp_14"
        android:layout_marginLeft="@dimen/dp_20"/>

    <ImageView
        android:layout_height="@dimen/dp_20"
        android:layout_width="@dimen/dp_20"
        android:src="@drawable/my_icon_next_n_xxhdpi"
        android:layout_marginLeft="@dimen/dp_160"/>

</LinearLayout>


    <LinearLayout
        android:id="@+id/ji"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_20">

    <ImageView
        android:layout_height="@dimen/dp_25"
        android:layout_width="@dimen/dp_25"
        android:src="@drawable/my_icon_inotice_n_xxhdpi"
        android:layout_marginLeft="@dimen/dp_12"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="我的积分"
        android:textSize="@dimen/sp_14"
        android:layout_marginLeft="@dimen/dp_20"/>

    <ImageView
        android:layout_height="@dimen/dp_20"
        android:layout_width="@dimen/dp_20"
        android:src="@drawable/my_icon_next_n_xxhdpi"
        android:layout_marginLeft="@dimen/dp_160"/>

</LinearLayout>


    <LinearLayout
        android:id="@+id/ren"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
