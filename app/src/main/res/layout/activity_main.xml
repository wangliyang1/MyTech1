        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_60"/>

    <TextView
        android:id="@+id/name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="诗和远方"
        android:textColor="#fff"
        android:textSize="@dimen/sp_14"
        android:layout_marginLeft="@dimen/dp_120"
        android:layout_marginTop="@dimen/dp_90"/>

    <TextView
        android:id="@+id/dersign"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="诗和远方"
        android:textColor="#fff"
        android:textSize="@dimen/sp_14"
        android:layout_marginLeft="@dimen/dp_120"
        android:layout_marginTop="@dimen/dp_130"/>


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/bgz">


    <LinearLayout
        android:id="@+id/shou"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_16">

    <ImageView
        android:layout_height="@dimen/dp_25"
        android:layout_width="@dimen/dp_25"
        android:src="@drawable/my_icon_collect_n_xxhdpi"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="我的收藏"
        android:textSize="@dimen/sp_14"
        android:layout_marginLeft="@dimen/dp_20"/>

    <ImageView
        android:layout_height="@dimen/dp_20"
        android:layout_width="@dimen/dp_20"
        android:src="@drawable/my_icon_next_n_xxhdpi"
        android:layout_marginLeft="@dimen/dp_160"/>

</LinearLayout>


    -<LinearLayout android:id="@+id/guan"
        android:layout_height="wrap_content"
