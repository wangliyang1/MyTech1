<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_112"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:id="@+id/item_rela2">
        <ImageView
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_92"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:id="@+id/item_image"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_image"
            android:textSize="@dimen/dp_14"
            android:text="1111111111"
            android:id="@+id/item_title"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_image"
            android:layout_below="@id/item_title"
            android:textSize="@dimen/dp_12"
            android:text="1111111111"
            android:id="@+id/item_summary"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_source"
            android:text="11111"
            android:textSize="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_toRightOf="@id/item_image"
            android:layout_below="@id/item_summary"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_time"
            android:text="11111"
            android:textSize="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_toRightOf="@id/item_image"
            android:layout_below="@id/item_summary"></TextView>
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:src="@drawable/fufei"
            android:layout_toRightOf="@id/item_time"
            android:layout_alignTop="@id/item_time"
            android:layout_marginLeft="@dimen/dp_20"
            android:id="@+id/item_collection_pay"></ImageView>
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@drawable/guanzhu_null"
            android:layout_toRightOf="@id/item_time"
            android:layout_alignTop="@id/item_time"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_50"
            android:id="@+id/item_collection_image"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_10"
            android:id="@+id/item_collection"
            android:layout_toRightOf="@id/item_collection_image"
            android:text="1111"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_alignTop="@id/item_collection_image"></TextView>
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@drawable/fenxiang_null"
            android:layout_toRightOf="@id/item_collection"
            android:layout_alignTop="@id/item_collection"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/item_share_image"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_10"
            android:id="@+id/item_share"
            android:layout_toRightOf="@id/item_share_image"
            android:text="1111"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_alignTop="@id/item_share_image"></TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/item_rela1"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dp_336"
            android:layout_height="@dimen/dp_220"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_18"
            android:id="@+id/consult_item_image"></ImageView>
        <ImageView
            android:layout_width="@dimen/dp_40"
            android:scaleType="fitXY"
            android:layout_height="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_12"
            android:src="@drawable/guangao"></ImageView>
    </RelativeLayout>

</LinearLayout>