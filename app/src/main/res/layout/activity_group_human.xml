<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.info.GroupHumanActivity">
    <ImageView
        android:layout_height="@dimen/dp_24"
        android:layout_width="@dimen/dp_24"
        android:id="@+id/comeBack"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:src="@drawable/common_icon_back_n_xxhdpi"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="@dimen/sp_16"
        android:text="群管理"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_height="@dimen/dp_24"
        android:layout_width="@dimen/dp_24"
        android:id="@+id/add"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/common_nav_btn_add_n_hdpi"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_alignParentRight="true"/>


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_60"
        android:orientation="vertical">

    <TextView
        android:layout_height="@dimen/dp_40"
        android:layout_width="match_parent"
        android:textSize="@dimen/sp_14"
        android:text="群主"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"/>

    <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/qunzhu"/>

    <TextView
        android:layout_height="@dimen/dp_40"
        android:layout_width="match_parent"
        android:textSize="@dimen/sp_14"
        android:text="群管理"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"/>

    <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/qunguanli"/>

    <TextView
        android:layout_height="@dimen/dp_40"
        android:layout_width="match_parent"
        android:textSize="@dimen/sp_14"
        android:text="群成员"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"/>

    <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/chengyuan"/>

</LinearLayout>
</RelativeLayout>