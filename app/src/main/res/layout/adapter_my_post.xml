<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_12"
        android:textColor="#666666"
        android:text="11111111111"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_12"
        android:id="@+id/post_content"></TextView>
    <ImageView
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_96"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_12"
        android:visibility="gone"
        android:id="@+id/post_image"></ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/post_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1111"
            android:textSize="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_14"
            android:id="@+id/post_time"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textColor="#20affa"
            android:textSize="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_14"
            android:id="@+id/post_cal"></TextView>

        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_180"
            android:layout_marginTop="@dimen/dp_14"
            android:src="@drawable/dianzan_null"
            android:id="@+id/post_zan_image"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_2"
            android:textSize="@dimen/dp_8"
            android:id="@+id/post_zan_text"
            android:text="10"
            android:layout_marginTop="@dimen/dp_14"></TextView>
        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_14"
            android:src="@drawable/xiaoxi"
            android:id="@+id/post_xiaoxi_image"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_2"
            android:id="@+id/post_xiaoxi_text"
            android:text="10"
            android:layout_marginTop="@dimen/dp_14"></TextView>
    </LinearLayout>

</LinearLayout>