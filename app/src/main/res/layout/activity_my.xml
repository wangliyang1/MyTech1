<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F2"
    android:layout_height="match_parent"
    tools:context=".view.activity.my.MyActivity">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_40"
        android:layout_width="match_parent"
        android:background="@color/colorWhite">

        <ImageView
            android:layout_height="@dimen/dp_20"
            android:layout_width="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/common_icon_back_n_xxhdpi"
            android:id="@+id/my_back"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:text="完善个人信息"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:id="@+id/my_wan"
            android:layout_marginRight="@dimen/dp_10"
            android:text="完成"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <RelativeLayout
            android:layout_height="@dimen/dp_50"
            android:layout_width="match_parent">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="昵称"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/dp_15"
                android:gravity="center_vertical"
                android:layout_margin="@dimen/dp_10"/>
            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="辣椒炒鸡蛋"
                android:gravity="center_vertical"
                android:layout_margin="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:id="@+id/my_name"
                android:textColor="#AA9797"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_height="@dimen/dp_50"
            android:layout_width="match_parent">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="性别"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/dp_15"
                android:gravity="center_vertical"
                android:layout_margin="@dimen/dp_10"/>
            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="男"
                android:gravity="center_vertical"
                android:layout_margin="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:id="@+id/my_sex"
                android:textColor="#AA9797"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_height="@dimen/dp_50"
            android:layout_width="match_parent">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="签名"
                android:textSize="@dimen/dp_15"
                android:gravity="center_vertical"
                android:layout_margin="@dimen/dp_10"/>

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="20dp"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center_vertical"
                android:src="@drawable/my_icon_next_n_xxhdpi"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:id="@+id/my_qianming"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:textColor="#AA9797"
                android:layout_marginBottom="@dimen/dp_10"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_height="@dimen/dp_50"
            android:layout_width="match_parent">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="出生日期"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/dp_15"
                android:gravity="center_vertical"
                android:layout_margin="@dimen/dp_10"/>
            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="男"
                android:gravity="center_vertical"
                android:layout_margin="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:id="@+id/my_shengri"
                android:textColor="#AA9797"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_height="@dimen/dp_50"
            android:layout_width="match_parent">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="邮箱"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/dp_15"
                android:gravity="center_vertical"
                android:layout_margin="@dimen/dp_10"/>
            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="男"
                android:gravity="center_vertical"
                android:layout_margin="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:id="@+id/my_email"
                android:textColor="#AA9797"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>