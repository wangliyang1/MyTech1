<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2f2"
    tools:context=".view.activity.my.MyPostActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2f2"
        android:id="@+id/lin"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/my_post_back"
            android:src="@drawable/common_icon_back_n_xxhdpi"
            android:layout_height="@dimen/dp_24"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_20"
            android:textColor="#666666"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_110"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="我的帖子"></TextView>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin"
        android:id="@+id/my_post_recycler"></androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/my_post_del"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:textSize="@dimen/dp_12"
            android:text="确认删除该条帖子"
            android:gravity="center"
            android:textColor="#999999"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_1"
            android:background="#999999"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:textSize="@dimen/dp_20"
            android:text="确认"
            android:id="@+id/my_post_ok"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center"
            android:textColor="#ff5757"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:textSize="@dimen/dp_20"
            android:text="取消"
            android:id="@+id/my_post_no"
            android:gravity="center"
            android:textColor="#333333"></TextView>
    </LinearLayout>
</RelativeLayout>