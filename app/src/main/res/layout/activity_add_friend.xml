<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.info.AddFriendActivity">
    <ImageView
        android:layout_height="@dimen/dp_24"
        android:layout_width="@dimen/dp_24"
        android:id="@+id/comeBack"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:src="@drawable/common_icon_back_n_xxhdpi"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="@dimen/sp_16"
        android:text="添加好友"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/send"
        android:layout_marginTop="@dimen/dp_20"
        android:text="发送"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:layout_height="@dimen/dp_1"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_60"
        android:background="#666"/>

    <ImageView
        android:layout_height="@dimen/dp_80"
        android:layout_width="@dimen/dp_80"
        android:id="@+id/head"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_80"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/name"
        android:layout_marginLeft="@dimen/dp_110"
        android:layout_marginTop="@dimen/dp_90"
        android:textSize="@dimen/sp_14"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/cont"
        android:layout_marginLeft="@dimen/dp_110"
        android:layout_marginTop="@dimen/dp_120"
        android:textSize="@dimen/sp_12"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_180"
        android:textSize="@dimen/sp_14"
        android:text="备注"/>

    <EditText
        android:layout_height="@dimen/dp_100"
        android:layout_width="match_parent"
        android:id="@+id/ed"
        android:layout_marginTop="@dimen/dp_220"
        android:background="@drawable/plback"
        android:gravity="start"/>
</RelativeLayout>